# Development Environment Configuration
NODE_ENV=development

# Server
PORT=5000
FRONTEND_PORT=3000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ppbe_dev
POSTGRES_USER=ppbe_dev_user
POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://ppbe_dev_user:dev_password@localhost:5432/ppbe_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_password
REDIS_URL=redis://:dev_password@localhost:6379

# Security
JWT_SECRET=dev-jwt-secret-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production

# Logging
LOG_LEVEL=debug
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=false

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Debug
DEBUG=true
VERBOSE_LOGGING=true
