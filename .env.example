# DEVOPS-007: Comprehensive Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
APP_NAME=PPBE-System
APP_VERSION=1.0.0

# ============================================
# Server Configuration
# ============================================
PORT=5000
HOST=0.0.0.0

# Backend
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ppbe
POSTGRES_USER=ppbe_user
POSTGRES_PASSWORD=changeme-use-strong-password

# Connection string format
DATABASE_URL=postgresql://ppbe_user:changeme@postgres:5432/ppbe

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme-use-strong-password
REDIS_URL=redis://:changeme@redis:6379
REDIS_TTL=3600
REDIS_DB=0

# ============================================
# Security Configuration
# ============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production-min-32-chars
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://ppbe.example.gov
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# AWS Configuration (for GovCloud)
# ============================================
AWS_REGION=us-gov-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration
S3_BUCKET_NAME=ppbe-assets
S3_REGION=us-gov-west-1

# SES Configuration (Email)
SES_REGION=us-gov-west-1
SES_FROM_EMAIL=noreply@ppbe.example.gov

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/ecs/ppbe
CLOUDWATCH_LOG_STREAM=ppbe-backend

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Console logging
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_LEVEL=debug

# File logging
LOG_FILE_ENABLED=true
LOG_FILE_LEVEL=info

# Error logging
LOG_ERROR_FILE_ENABLED=true
LOG_ERROR_FILE=error.log

# ============================================
# Monitoring Configuration
# ============================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin-change-in-production

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.example.gov
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ppbe.example.gov

# ============================================
# Feature Flags
# ============================================
FEATURE_BUDGET_APPROVAL=true
FEATURE_ANALYTICS=true
FEATURE_AUDIT_LOGS=true
FEATURE_NOTIFICATIONS=true
FEATURE_REPORTS=true

# ============================================
# Federal Compliance
# ============================================
FEDRAMP_LEVEL=moderate
FISMA_CLASSIFICATION=moderate
DATA_ENCRYPTION=AES-256
AUDIT_RETENTION_DAYS=2555

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ppbe-backups

# ============================================
# Security Headers
# ============================================
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=SAMEORIGIN

# ============================================
# API Configuration
# ============================================
API_PREFIX=/api
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx
UPLOAD_DIR=./uploads

# ============================================
# Third-party Integrations
# ============================================
# Example: Integration with other federal systems
INTEGRATION_ENABLED=false
INTEGRATION_API_KEY=
INTEGRATION_API_URL=

# ============================================
# Development/Debug Configuration
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ppbe_test
TEST_REDIS_URL=redis://localhost:6379/1
